<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngeartstudio.technofarmv1.technofarmv1.BungaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="?attr/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Technofarm - Bunga"
        app:titleTextColor="@color/white" />

    <!--<com.jjoe64.graphview.GraphView-->
    <!--android:id="@+id/graph"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="200dp"-->
    <!--android:layout_alignParentBottom="false"-->
    <!--android:layout_alignParentEnd="false"-->
    <!--android:layout_below="@+id/toolbar2"-->
    <!--android:background="@color/FloralWhite"-->
    <!--android:title="Graph Title" />-->

    <RelativeLayout
        android:id="@+id/layoutproses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:visibility="visible">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            card_view:cardCornerRadius="4dp">


            <com.cardiomood.android.controls.gauge.SpeedometerGauge
                android:id="@+id/speedometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/card_view"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/Suhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_view"
                android:layout_marginStart="5dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Suhu : "
                android:textAlignment="textStart"
                android:textColor="?android:attr/textColorPrimaryDisableOnly"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/statussuhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="0"
                android:textAlignment="textStart"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kelembaban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_view"
                android:layout_marginEnd="75dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Kelembaban :"
                android:textAlignment="textEnd"
                android:textColor="?android:attr/textColorPrimaryDisableOnly"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/statuskelembaban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="21sp"
                android:textStyle="bold" />
            <!-- test-->
            <TextView
                android:id="@+id/Suhu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Status :"
                android:textAlignment="textStart"
                android:textColor="?android:attr/textColorPrimaryDisableOnly"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/statussuhu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="status"
                android:textAlignment="textStart"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kelembaban2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_view"
                android:layout_marginEnd="75dp"
                android:layout_marginTop="30dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Status :"
                android:textAlignment="textEnd"
                android:textColor="?android:attr/textColorPrimaryDisableOnly"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/statuskelembaban2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="30dp"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="status"
                android:textAlignment="textEnd"
                android:textSize="21sp"
                android:textStyle="bold" />
            <!-- test-->

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_centerHorizontal="true"
            android:text="Pengaturan Smart Farm"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_lembab"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/kelembaban2" />

                <EditText
                    android:id="@+id/hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Masukan Kelembaban"
                    android:inputType="number" />

                <Button
                    android:id="@+id/setHold"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view2"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_waktu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/waktu" />

                <EditText
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="false"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Masukan Waktu"
                    android:inputType="time" />

                <Button
                    android:id="@+id/setTime"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view3"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_weight="0.14"
                    app:srcCompat="@drawable/settings" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.91"
                    android:text="Pengaturan Manual"
                    android:textSize="18sp" />

                <ToggleButton
                    android:id="@+id/manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="ToggleButton 1"
                    android:textColorLink="@color/red"
                    android:textOff="Off"
                    android:textOn="On" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:layout_marginTop="244dp" />
</RelativeLayout>
